{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Prepare HR/LR dataset",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "src.dataset.make_low_sr_dataset",
        "--in_root",
        "archive"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Train AudioSR",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "src.train",
        "--dataset_dir",
        "data",
        "--batch_size",
        "32",
        "--epochs",
        "100"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Infer AudioSR single file",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "src.infer",
        "--input_wav",
        "data/low_8k/p225_003.wav "
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Infer AudioSR (on 20 files)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "src.infer",
        "--max_files",
        "20"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}

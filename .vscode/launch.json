{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Train AudioSR-GAN (48k)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/train.py",
      "args": [
        "--dataset_dir",
        "data",
        "--out_dir",
        "checkpoints_gan",
        "--batch_size",
        "32",
        "--epochs",
        "1000"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Single-file Inference",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/infer.py",
      "args": [
        "--input_wav",
        "data/low_sr/p225_003.wav",
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Batch Inference",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/infer.py",
      "args": [
        "--max_files",
        "20"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
